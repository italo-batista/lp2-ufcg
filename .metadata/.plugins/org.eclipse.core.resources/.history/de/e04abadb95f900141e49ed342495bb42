
public class Mensagem {

	public Mensagem() {
		
	}
	
	// TRATAR EXCEPTION
	public String estadoAtual(String nomeHeroi, int HP) {
		String mensagem = "";
		
		if (HP > 0) {
			mensagem = nomeHeroi + " ainda tenho " + HP + " de vida.";
		} if (HP > -10 && HP <= 0) {
			mensagem = nomeHeroi + " desmaiou, mas ainda pode ser curado.";
		} if (HP < -10) {
			mensagem = nomeHeroi + " desmaiou sem chances de voltar com pocao.";
		}
		
		return mensagem;
	}
	
}
