package lab05;

public class Jogo {

	private String nome;
	private double preco;
	private double maiorScore;
	private int vezesJogada;
	private int vezesZerada;
	
	public Jogo (String nome, double preco, double maiorScore, int vezesJogada, int vezesZerada) throws Exception {
		
		if (nome == null || nome.equals("")) {
			throw new Exception("O nome de um jogo n√£o pode ser vazio.");
		} else {
			this.nome = nome;
		}
		
		this.preco = preco;
		
		
	}
	
}
