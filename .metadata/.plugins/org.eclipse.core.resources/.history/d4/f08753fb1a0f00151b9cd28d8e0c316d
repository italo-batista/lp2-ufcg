package lab05;

import static org.junit.Assert.*;

import java.util.HashSet;

import org.junit.Assert;
import org.junit.Before;
import org.junit.Test;

public class JogoTest {

	@Before
	public void setUp() throws Exception {
	
		HashSet jogabilidades = new HashSet<Jogabilidade>();
		jogabilidades.add(Jogabilidade.OFFLINE);
		
		Jogo zombieEx = new Jogo("Zombie Exterminator", 22.99, jogabilidades);  
		
		Assert.assertEquals("Zombie Exterminator", zombieEx.getNome());
		Assert.assertEquals(22.99, zombieEx.getPreco());
		Assert.assertEquals(jogabilidades, zombieEx.getJogabilidades());
		Assert.assertEquals(0, zombieEx.getVezesJogadas());
		Assert.assertEquals(0, zombieEx.getVezesZeradas());
		Assert.assertEquals(0, zombieEx.getMaiorScore());
	}

	@Test
	public void testCriaJogoRPG() {
		fail("Not yet implemented");
	}
}
