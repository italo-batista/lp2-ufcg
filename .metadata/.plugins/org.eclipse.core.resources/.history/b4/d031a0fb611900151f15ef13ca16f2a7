package lista03_her_comp;

public class Humano extends Raca {

	public Humano() {
		super();
	}
	
	public int ataca(Heroi outroHeroi, int dano, int energia){
		energia = energia - 10;
		outroHeroi.recebeDano((int)dano);
		if (outroHeroi.vida > 0) { outroHeroi.papel.defende(); }
		return energia;
	}
	
	public int recebeDano(int dano, int vida){
		vida = vida - (dano / 2);
		return vida;
	}
	
	public int cura(Heroi outroHeroi, int energia){
		energia = energia - 10;
		return energia;
	}
	
	public int recuperaEnergia(int energia){
		energia = energia + 50;
		if (energia > 100) {
			energia = 100;
		}
		return energia;
	}
	
}
